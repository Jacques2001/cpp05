NAME        = Bureaucrat
OBJ_DIR     = objs

RED		= \033[0;31m
GREEN	= \033[0;32m
YELLOW	= \033[0;33m
BLUE	= \033[0;34m
CYAN	= \033[0;36m
RESET	= \033[0m

SRCS        = 	main.cpp \
				Bureaucrat.cpp

OBJS        = $(SRCS:%.cpp=$(OBJ_DIR)/%.o)

CC          = c++ -g -std=c++98
CFLAGS  	= -Wall -Wextra -Werror

all: $(NAME)

$(NAME): $(OBJS) Bureaucrat.hpp
	@echo "$(CYAN)üîß Linking: $(NAME)$(RESET)"
	@$(CC) $(CFLAGS) $(OBJS) -o $(NAME)
	@echo "$(GREEN)‚úÖ Compilation termin√©e avec succ√®s !$(RESET)"

$(OBJ_DIR)/%.o: %.cpp
	@mkdir -p $(dir $@)
	@echo "$(YELLOW)üìù Compiling: $<$(RESET)"
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@echo "$(YELLOW)üßπ Cleaning objects...$(RESET)"
	@rm -rf $(OBJ_DIR)

fclean: clean
	@echo "$(RED)üóëÔ∏è  Full clean...$(RESET)"
	@rm -f $(NAME)

re: fclean all
	@echo "$(GREEN)‚ôªÔ∏è  Rebuilding project...$(RESET)"

.PHONY: all clean fclean re